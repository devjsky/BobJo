<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- EditText 가 포커스를 받지 않은 일반 상태일 때의 모양 및 색상 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/edit_text_default_line_color" />
            <solid
                android:color="@color/edit_text_disable_bg_color" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- 에디트텍스트가 포커스를 받았을때의 모양 및 색상 -->

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/edit_text_focus_line_color" />
            <solid
                android:color="@color/edit_text_focus_bg_color" />
            <corners android:radius="8dp"/>
        </shape>
    </item>


    <!-- EditText 가 포커스를 받지 않은 일반 상태일 때의 모양 및 색상 -->
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/edit_text_default_line_color" />
            <solid
                android:color="@color/edit_text_default_bg_color" />
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>