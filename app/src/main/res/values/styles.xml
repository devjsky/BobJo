<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "BottomNavigationView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>

    </style>

    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>

    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="tabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24.156sp</item>
        <item name="fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="lineSpacing">-3sp</item>
    </style>
    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Calendar"/>

    <style name="Calendar.HeaderDateText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="Calendar.CalendarViewStyle">
        <item name="dayHeight">44dp</item>
    </style>

    <style name="Calendar.ItemViewStyle">
        <item name="dayTextSize">14dp</item>
    </style>



    <style name="TextAppearance.Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance.SubHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">24dp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="SpinnerDatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!--This will change the window dialog background color-->
        <item name="android:windowBackground">@drawable/bg_popup_dialog_01</item>
        <!-- This will change the date picker Day/Month/Year Text color-->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- This will change the divider color -->
        <item name="android:colorControlNormal">@color/page_layout_group_subject_color_01</item>
        <!-- This will set a custom style to the Date Picker eg: spinner mode style -->
        <item name="android:datePickerStyle">@style/MySpinnerDatePickerStyle</item>
        <!-- This will set a custom style to the dialog Button Positive-->
        <item name="android:buttonBarPositiveButtonStyle">@style/MyDatePickerButtonStyle</item>
        <!-- This will set a custom style to the dialog Button Negative-->
        <item name="android:buttonBarNegativeButtonStyle">@style/MyDatePickerButtonStyle</item>
        <!-- This will change the dialog Title Text color -->
        <item name="android:textColor">@color/main_color</item>

    </style>

    <!-- Custom  DatePicker Style-->
    <style name="MySpinnerDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Custom TimePicker Button Style-->
    <style name="MyDatePickerButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="SpinnerTimePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!--This will change the window dialog background color-->
        <item name="android:windowBackground">@drawable/bg_popup_dialog_01</item>
        <!-- This will change the date picker Day/Month/Year Text color-->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- This will change the divider color -->
        <item name="android:colorControlNormal">@color/page_layout_group_subject_color_01</item>
        <!-- This will set a custom style to the Date Picker eg: spinner mode style -->
        <item name="android:timePickerStyle">@style/MySpinnerTimePickerStyle</item>
        <!-- This will set a custom style to the dialog Button Positive-->
        <item name="android:buttonBarPositiveButtonStyle">@style/MyTimePickerButtonStyle</item>
        <!-- This will set a custom style to the dialog Button Negative-->
        <item name="android:buttonBarNegativeButtonStyle">@style/MyTimePickerButtonStyle</item>
        <!-- This will change the dialog Title Text color -->
        <item name="android:textColor">@color/main_color</item>

    </style>

    <!-- Custom  TimePicker Style-->
    <style name="MySpinnerTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Custom TimePicker Button Style-->
    <style name="MyTimePickerButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/main_color</item>
    </style>

</resources>