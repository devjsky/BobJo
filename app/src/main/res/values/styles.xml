<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "BottomNavigationView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>

    </style>

    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>

    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="tabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24.156sp</item>
        <item name="fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="lineSpacing">-3sp</item>
    </style>
    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Calendar"/>

    <style name="Calendar.HeaderDateText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="Calendar.CalendarViewStyle">
        <item name="dayHeight">44dp</item>
    </style>

    <style name="Calendar.ItemViewStyle">
        <item name="dayTextSize">14dp</item>
    </style>
</resources>