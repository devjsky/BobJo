<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="kr.co.devjsky.android.bobjo.ui.schedule.viewmodel.ScheduleViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.schedule.activity.ScheduleInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top_menu"
        android:background="@drawable/bg_top_menu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_height">
        <View
            android:visibility="invisible"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/iv_empty_01"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:letterSpacing="-0.03"
            app:layout_constraintStart_toEndOf="@id/iv_empty_01"
            app:layout_constraintEnd_toStartOf="@id/iv_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:id="@+id/tv_top_menu_title"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ico_delete_01"
            android:adjustViewBounds="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

     <LinearLayout
         android:background="@color/black"
         android:layout_below="@id/layout_top_menu"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">


     </LinearLayout>
    </RelativeLayout>
</layout>